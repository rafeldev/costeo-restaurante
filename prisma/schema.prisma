generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UnidadBase {
  GRAMO
  KILOGRAMO
  MILILITRO
  LITRO
  UNIDAD
}

model Insumo {
  id           String         @id @default(cuid())
  nombre       String         @unique
  categoria    String
  unidadBase   UnidadBase
  costoUnidad  Decimal        @db.Decimal(12, 4)
  mermaPct     Decimal        @default(0) @db.Decimal(5, 2)
  proveedor    String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  recetaInsumos RecetaInsumo[]
}

model Receta {
  id                String         @id @default(cuid())
  nombre            String
  tipoProducto      String
  rendimientoPorciones Int
  tiempoPreparacionMin Int?
  precioVentaActual Decimal?       @db.Decimal(12, 2)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  ingredientes      RecetaInsumo[]
}

model RecetaInsumo {
  id          String   @id @default(cuid())
  recetaId    String
  insumoId    String
  cantidad    Decimal  @db.Decimal(12, 4)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  receta      Receta   @relation(fields: [recetaId], references: [id], onDelete: Cascade)
  insumo      Insumo   @relation(fields: [insumoId], references: [id], onDelete: Restrict)

  @@unique([recetaId, insumoId])
}

model ConfiguracionCosteo {
  id               String   @id @default(cuid())
  overheadPct      Decimal  @default(10) @db.Decimal(5, 2)
  margenObjetivoPct Decimal @default(35) @db.Decimal(5, 2)
  impuestoPct      Decimal  @default(0) @db.Decimal(5, 2)
  redondeoPrecio   Decimal  @default(100) @db.Decimal(8, 2)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
