generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UnidadBase {
  GRAMO
  KILOGRAMO
  MILILITRO
  LITRO
  UNIDAD
}

enum TipoMovimientoInventario {
  ENTRADA
  SALIDA
  AJUSTE
}

enum EstadoProduccion {
  ACTIVA
  ANULADA
}

enum EstadoVenta {
  ABIERTA
  CERRADA
  CANCELADA
}

model Insumo {
  id           String              @id @default(cuid())
  ownerId      String
  nombre       String
  categoria    String
  unidadBase   UnidadBase
  costoUnidad  Decimal             @db.Decimal(12, 4)
  mermaPct     Decimal             @default(0) @db.Decimal(5, 2)
  proveedor    String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  owner        User                @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  recetaInsumos RecetaInsumo[]
  compras      CompraInsumo[]
  movimientos  MovimientoInventario[]
  inventario   InventarioInsumo?

  @@unique([ownerId, nombre])
  @@index([ownerId])
}

model Receta {
  id                String         @id @default(cuid())
  ownerId           String
  nombre            String
  tipoProducto      String
  rendimientoPorciones Int
  tiempoPreparacionMin Int?
  precioVentaActual Decimal?       @db.Decimal(12, 2)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  owner             User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ingredientes      RecetaInsumo[]
  producciones      Produccion[]
  ventaItems        VentaItem[]

  @@index([ownerId])
}

model Produccion {
  id                    String              @id @default(cuid())
  ownerId               String
  recetaId              String?
  recetaNombre          String
  unidades              Int
  costoTotalProduccion  Decimal             @db.Decimal(12, 2)
  estado                EstadoProduccion    @default(ACTIVA)
  fechaProduccion       DateTime            @default(now())
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  owner                 User                @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  receta                Receta?             @relation(fields: [recetaId], references: [id], onDelete: SetNull)
  movimientos           MovimientoInventario[]

  @@index([ownerId, fechaProduccion])
  @@index([recetaId, fechaProduccion])
}

model RecetaInsumo {
  id          String   @id @default(cuid())
  recetaId    String
  insumoId    String
  cantidad    Decimal  @db.Decimal(12, 4)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  receta      Receta   @relation(fields: [recetaId], references: [id], onDelete: Cascade)
  insumo      Insumo   @relation(fields: [insumoId], references: [id], onDelete: Restrict)

  @@unique([recetaId, insumoId])
}

model ConfiguracionCosteo {
  id               String   @id @default(cuid())
  ownerId          String   @unique
  overheadPct      Decimal  @default(10) @db.Decimal(5, 2)
  margenObjetivoPct Decimal @default(35) @db.Decimal(5, 2)
  impuestoPct      Decimal  @default(0) @db.Decimal(5, 2)
  redondeoPrecio   Decimal  @default(100) @db.Decimal(8, 2)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  owner            User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model Proveedor {
  id        String        @id @default(cuid())
  ownerId   String
  nombre    String
  contacto  String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  owner     User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  compras   CompraInsumo[]

  @@unique([ownerId, nombre])
  @@index([ownerId])
}

model CompraInsumo {
  id                   String               @id @default(cuid())
  insumoId             String
  proveedorId          String?
  fechaCompra          DateTime             @default(now())
  cantidadCompra       Decimal              @db.Decimal(12, 4)
  unidadCompra         UnidadBase
  precioTotal          Decimal              @db.Decimal(12, 2)
  costoUnitarioCalculado Decimal            @db.Decimal(12, 4)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  insumo               Insumo               @relation(fields: [insumoId], references: [id], onDelete: Cascade)
  proveedor            Proveedor?           @relation(fields: [proveedorId], references: [id], onDelete: SetNull)
  movimientos          MovimientoInventario[]

  @@index([insumoId, fechaCompra])
  @@index([proveedorId, fechaCompra])
}

model InventarioInsumo {
  insumoId     String   @id
  stockActual  Decimal  @default(0) @db.Decimal(12, 4)
  stockMinimo  Decimal  @default(0) @db.Decimal(12, 4)
  updatedAt    DateTime @updatedAt
  insumo       Insumo   @relation(fields: [insumoId], references: [id], onDelete: Cascade)
}

model Venta {
  id          String       @id @default(cuid())
  ownerId     String
  estado      EstadoVenta  @default(ABIERTA)
  fechaHora   DateTime     @default(now())
  mesa        String?
  notas       String?
  total       Decimal      @default(0) @db.Decimal(12, 2)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  items       VentaItem[]
  movimientos MovimientoInventario[]

  @@index([ownerId, estado])
  @@index([ownerId])
}

model VentaItem {
  id             String   @id @default(cuid())
  ventaId        String
  recetaId       String
  cantidad       Decimal  @db.Decimal(12, 4)
  precioUnitario Decimal  @db.Decimal(12, 2)
  subtotal       Decimal  @db.Decimal(12, 2)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  venta          Venta    @relation(fields: [ventaId], references: [id], onDelete: Cascade)
  receta         Receta   @relation(fields: [recetaId], references: [id], onDelete: Restrict)

  @@index([ventaId])
}

model MovimientoInventario {
  id                 String                  @id @default(cuid())
  insumoId           String
  tipo               TipoMovimientoInventario
  cantidad           Decimal                 @db.Decimal(12, 4)
  motivo             String?
  fechaMovimiento    DateTime                @default(now())
  referenciaCompraId String?
  referenciaVentaId  String?
  produccionId       String?
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
  insumo             Insumo                  @relation(fields: [insumoId], references: [id], onDelete: Cascade)
  referenciaCompra   CompraInsumo?           @relation(fields: [referenciaCompraId], references: [id], onDelete: SetNull)
  referenciaVenta    Venta?                  @relation(fields: [referenciaVentaId], references: [id], onDelete: SetNull)
  produccion         Produccion?             @relation(fields: [produccionId], references: [id], onDelete: SetNull)

  @@index([insumoId, fechaMovimiento])
  @@index([tipo, fechaMovimiento])
  @@index([referenciaVentaId])
  @@index([produccionId])
}

model User {
  id                   String               @id @default(cuid())
  email                String               @unique
  passwordHash         String
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  insumos              Insumo[]
  recetas              Receta[]
  producciones         Produccion[]
  ventas               Venta[]
  configuracionesCosteo ConfiguracionCosteo[]
  proveedores          Proveedor[]
}
